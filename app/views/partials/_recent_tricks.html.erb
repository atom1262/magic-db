<div class="recent-tricks">
  <div class="col-md-6">
    <div class="row">
      <h3>Recently Added Tricks</h3>
      <ul>
        <% @tricks.each do |trick| %>
          <li><%= link_to trick.name, trick %> submitted by: <%= trick.author %> <%= time_ago_in_words(trick.created_at) %> ago</li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
